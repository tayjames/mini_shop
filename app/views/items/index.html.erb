<h1>All Items</h1>

<% @items.each do |item| %>
  <h2><%= item.name %></h2>
  <p>Description: <%= item.description %></p>
  <p>Description: <%= item.price %></p>
  <p>Description: <%= item.image %></p>
  <p>Description: <%= item.status %></p>
  <p>Description: <%= item.inventory %></p>
  <p>Description: <%= item.merchant %></p>

<% end %>
