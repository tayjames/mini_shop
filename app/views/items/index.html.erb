<h1>All Items</h1>

<% @items.each do |item| %>
  <div id="item-<%= item.id%>">
    <h2><%= item.name %></h2>
    <p>Description: <%= item.description %></p>
    <p>Price: <%= item.price %></p>
    <p>Image: <%= item.image %></p>
    <p>Status: <%= item.status %></p>
    <p>Inventory: <%= item.inventory %></p>
    <p>Merchant: <%= item.merchant %></p>
    <%= link_to 'Edit', "/items/#{item.id}/edit" %>
  </div>
<% end %>
